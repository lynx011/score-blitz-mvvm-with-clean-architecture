<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="league"
            type="com.lynx.scoreblitz.domain.model.Leagues" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/leagueCard"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="14dp"
        app:strokeColor="@color/green_1"
        app:strokeWidth="1dp"
        android:layout_marginEnd="10dp"
        android:outlineSpotShadowColor="@color/main_bg"
        android:outlineAmbientShadowColor="@color/main_bg">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="6dp"
        android:orientation="horizontal">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            android:layout_marginEnd="6dp"
            android:backgroundTint="@color/dark_grey"
            app:strokeColor="@color/dark_grey"
            app:strokeWidth="0dp"
            app:cardCornerRadius="170dp">
            <ImageView
                android:id="@+id/leagueImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:loadImage="@{league.league_logo}"/>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/leagueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{league.league_name}"
            android:layout_gravity="center"/>
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>