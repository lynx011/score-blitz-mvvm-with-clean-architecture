<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.screens.fixture_detail.StatsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/main_bg"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/main_bg"
            android:outlineAmbientShadowColor="@color/main_bg"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="10dp"
            app:strokeWidth="0dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="12dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/statsRec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/stats_progress_item">
            </androidx.recyclerview.widget.RecyclerView>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</layout>