<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="fixture"
            type="com.lynx.scoreblitz.domain.model.FixtureResult" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/black_glass2"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="12dp"
        android:outlineAmbientShadowColor="@color/main_bg"
        android:outlineSpotShadowColor="@color/main_bg"
        app:strokeWidth="0dp"
        app:cardElevation="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="10dp">
                <LinearLayout
                    android:id="@+id/firstLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    tools:ignore="MissingConstraints">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/light_grey"
                        app:formattedDate="@{fixture.event_date}"
                        tools:text="Sep, 11 2022"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/homeResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/green_1"
                            tools:text="2"/>
                        <ImageView
                            android:id="@+id/homeLogo"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="8dp"
                            app:loadImage="@{fixture.home_team_logo}"
                            tools:src="@mipmap/ic_launcher"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/grey5"
                            android:text="@{fixture.event_home_team}"
                            tools:text="Manchester City"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/awayResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/green_2"
                            tools:text="2"/>
                        <ImageView
                            android:id="@+id/awayLogo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginHorizontal="8dp"
                            app:loadImage="@{fixture.away_team_logo}"
                            tools:src="@mipmap/ic_launcher"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/grey5"
                            android:text="@{fixture.event_away_team}"
                            tools:text="Leicester City"/>
                    </LinearLayout>
                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/firstLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:gravity="end"
                app:layout_constraintStart_toEndOf="@+id/firstLayout"
                app:layout_constraintTop_toTopOf="@+id/firstLayout"

                app:layout_constraintVertical_bias="0.0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_grey"
                    android:layout_gravity="top"
                    android:textSize="12sp"
                    android:text="@{fixture.league_name}"
                    tools:text="Sep, 11 2022" />
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@color/green_1"
                    android:layout_marginVertical="14dp"
                    android:outlineSpotShadowColor="@color/charcoal"
                    android:outlineAmbientShadowColor="@color/charcoal"
                    app:cardElevation="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_grey"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="FT"
                        tools:text="FT"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>